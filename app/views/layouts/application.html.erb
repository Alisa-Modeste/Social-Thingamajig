<!DOCTYPE html>
<html>
<head>
  <title>SocialThingamajig</title>
  <%= csrf_meta_tags %>

  <%= debug params%>
</head>
<body>

  <% if current_user %>
    <p><%= "You are logged in as #{current_user.email}" %>.</p>
    <%= button_to "Log out", session_url, method: 'delete' %>

  <% else %>
    <%= link_to "log in", new_session_url %>
  <% end %>
  <hr>

<%= yield %>

</body>
</html>
